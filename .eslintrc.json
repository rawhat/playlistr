{
    "env": {
        "node": true,
        "browser": true,
        "jquery": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "semi": 2
    },
    "settings": {
        "react": {
          "pragma": "React",
          "version": "15.0"
        }
    }
}