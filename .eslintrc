{
    "env": {
        "node": true,
        "browser": true,
        "jquery": true
    },
    "globals": {
        "Promise": true,
        "Reflect": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "classes": true,
            "jsx": true
        }
    },
    "plugins": [
    "babel",
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "semi": 2,
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.0"
        }
    }
}
